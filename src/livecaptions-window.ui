<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="LiveCaptionsWindow" parent="GtkApplicationWindow">
    <style>
      <class name="main-window-parent"/>
    </style>

  <property name="default-width">900</property>
  <property name="default-height">550</property>
  <property name="resizable">True</property>
    <property name="title">Live Captions</property>

    <child>
      <object class="GtkShortcutController">
        <child>
          <object class="GtkShortcut">
            <property name="trigger">&lt;Control&gt;comma</property>
            <property name="action">action(app.preferences)</property>
          </object>
        </child>
      </object>
    </child>

    <child type="titlebar">
      <object class="GtkWindowHandle" id="main">
        <style>
          <class name="main-container"/>
        </style>
        <child>
          <object class="GtkBox">
            <property name="orientation">horizontal</property>
            <property name="valign">center</property>
            <property name="hexpand">True</property>

            <!-- Left controls: mic + settings -->
            <child>
              <object class="GtkBox" id="side_box">
                <property name="margin-start">6</property>
                <property name="orientation">horizontal</property>
                <property name="valign">center</property>
                <property name="visible">True</property>

                <child>
                  <object class="GtkToggleButton" id="mic_button">
                    <property name="margin-end">6</property>
                    <property name="margin-top">10</property>
                    <property name="valign">center</property>
                    <property name="tooltip-text">Caption microphone instead of desktop audio</property>
                    <property name="child">
                      <object class="GtkImage">
                        <property name="resource">/net/sapples/LiveCaptions/icons/scalable/actions/microphone2-symbolic.svg</property>
                        <style>
                          <class name="header-icon"/>
                        </style>
                      </object>
                    </property>
                    <style>
                      <class name="flat"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkButton">
                    <property name="valign">center</property>
                    <property name="margin-top">10</property>
                    <property name="action-name">app.preferences</property>
                    <property name="tooltip-text">Adjust preferences</property>
                    <property name="child">
                      <object class="GtkImage">
                        <property name="resource">/net/sapples/LiveCaptions/icons/scalable/actions/settings-symbolic.svg</property>
                        <style>
                          <class name="header-icon"/>
                        </style>
                      </object>
                    </property>
                    <style>
                      <class name="flat"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>

            <!-- Tiny layout placeholder (kept for compatibility) -->
            <child>
              <object class="GtkBox" id="side_box_tiny">
                <property name="visible">False</property>
                <property name="orientation">horizontal</property>
              </object>
            </child>

            <!-- Spacer -->
            <child>
              <object class="GtkBox">
                <property name="hexpand">True</property>
              </object>
            </child>

            <!-- Right controls: Close button -->
            <child>
              <object class="GtkWindowControls">
                <property name="halign">end</property>
                <property name="valign">center</property>
                <property name="side">end</property>
                <property name="decoration-layout">:close</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>

    <!-- Main content below header: Scrolled TextView with overlay warnings and hidden label for measurements -->
    <child>
      <object class="GtkOverlay">
        <property name="hexpand">True</property>
        <property name="vexpand">True</property>

        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="hexpand">True</property>
            <property name="vexpand">True</property>
            <property name="valign">fill</property>

            <child>
              <object class="GtkScrolledWindow" id="transcript_scroll">
                <property name="hexpand">True</property>
                <property name="vexpand">True</property>
                <property name="margin-start">8</property>
                <property name="margin-end">8</property>
                <property name="margin-top">8</property>
                <property name="margin-bottom">8</property>
                <child>
                  <object class="GtkTextView" id="transcript_view">
                    <property name="hexpand">True</property>
                    <property name="vexpand">True</property>
                    <property name="wrap-mode">word-char</property>
                    <property name="editable">False</property>
                    <property name="cursor-visible">False</property>
                    <property name="monospace">False</property>
                  </object>
                </child>
              </object>
            </child>

            <!-- Hidden label used for width calculations -->
            <child>
              <object class="GtkLabel" id="label">
                <property name="visible">False</property>
                <property name="label">Text will appear here</property>
                <property name="hexpand">True</property>
                <property name="vexpand">False</property>
                <property name="xalign">0.0</property>
                <property name="halign">start</property>
                <property name="width-chars">1</property>
              </object>
            </child>
          </object>
        </child>

        <child type="overlay">
          <object class="GtkImage" id="too_slow_warning">
            <style>
              <class name="warning-icon"/>
            </style>
            <property name="visible">False</property>
            <property name="margin-end">6</property>
            <property name="margin-bottom">6</property>
            <property name="halign">end</property>
            <property name="valign">end</property>
            <property name="icon-name">dialog-warning-symbolic</property>
            <property name="tooltip-text">Can't keep up! Try closing any processing-intensive programs. Accuracy will be severely affected.</property>
          </object>
        </child>

        <child type="overlay">
          <object class="GtkImage" id="slow_warning">
            <style>
              <class name="slow-icon"/>
            </style>
            <property name="visible">False</property>
            <property name="margin-end">6</property>
            <property name="margin-bottom">6</property>
            <property name="halign">end</property>
            <property name="valign">end</property>
            <property name="resource">/net/sapples/LiveCaptions/icons/scalable/actions/slow-icon-symbolic.svg</property>
            <property name="tooltip-text">Processing can't keep up. Accuracy may be affected.</property>
          </object>
        </child>

        <child type="overlay">
          <object class="GtkImage" id="slowest_warning">
            <style>
              <class name="slowest-icon"/>
            </style>
            <property name="visible">False</property>
            <property name="margin-end">6</property>
            <property name="margin-bottom">6</property>
            <property name="halign">end</property>
            <property name="valign">end</property>
            <property name="resource">/net/sapples/LiveCaptions/icons/scalable/actions/slowest-icon-symbolic.svg</property>
            <property name="tooltip-text">Processing can't keep up. Accuracy may be affected a lot.</property>
          </object>
        </child>
      </object>
    </child>
  </template>

  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">_Microphone Captioning</attribute>
        <attribute name="action">app.microphone</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_Preferences</attribute>
        <attribute name="action">app.preferences</attribute>
      </item>
    </section>
  </menu>
</interface>

